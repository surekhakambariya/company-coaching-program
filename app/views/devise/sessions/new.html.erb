<div class="container mx-auto p-16">
  <h2 class="text-2xl font-semibold leading-tight my-4">Log in</h2>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3 mb-6 md:mb-0">
        <%= f.label :email, class: "block uppercase text-gray-700 text-xs font-bold mb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "appearance-none block w-full bg-gray-200 text-gray-700 border rounded-lg py-3 px-4 mb-3 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>
    <div class="flex flex-wrap -mx-3 mb-6">
      <div class="w-full md:w-1/2 px-3">
        <%= f.label :password, class: "block uppercase text-gray-700 text-xs font-bold mb-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-200 rounded-lg py-3 px-4 leading-tight focus:outline-none focus:bg-white focus:border-gray-500" %>
      </div>
    </div>
    <div class="w-full px-3 mb-6 md:mb-0">
      <div class="flex flex-wrap -mx-3 mb-6">
        <div class="w-full">
          <%= f.submit "Log in", class: "shadow-none bg-blue-700 hover:bg-blue-400 focus:shadow-outline focus:outline-none text-white font-bold py-4 px-10 rounded-lg" %>
        </div>
      </div>
    </div>
  <% end %>
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end %>
</div>

